  /usr/include/anax/anax.hpp
  /usr/include/anax/detail/AnaxAssert.hpp
  /usr/include/anax/detail/BaseSystem.hpp
  /usr/include/anax/detail/ClassTypeId.hpp
  /usr/include/anax/detail/ComponentTypeList.hpp
