HOMEPAGE="https://launchpad.net/${PN}"
SRC_URI="https://launchpad.net/${PN}/${PV[1]}.${PV[2]}/${PV}/+download/${P}.tar.gz"
PATCH_URI="
	https://sources.debian.org/data/main/${PN:0:1}/${PN}/${PV}-2/debian/patches/replace-deprecated-functions.patch
	https://sources.debian.org/data/main/${PN:0:1}/${PN}/${PV}-2/debian/patches/0001_spelling-error.patch
	https://sources.debian.org/data/main/${PN:0:1}/${PN}/${PV}-2/debian/patches/build-Remove-unused-dbus-glib-build-dependency.patch
"

CATEGORY="Devel"
SUMMARY="Utility to run executables under new DBus session for testing"
DESCRIPTION="A small little utility to run a couple of executables under a new DBus session
for testing."

LICENSE="GPL-3.0-or-later"
LICENSE_SPDX="SPDX-License-Identifier: GPL-3.0-or-later"
LICENSE_URI="COPYING"

BUILD_REQUIRES="
	libglib2.0-devel
"

CYGCONF_ARGS="
	--enable-maintainer-mode
"

PKG_NAMES="
	${PN}
	libdbustest1
	libdbustest-devel
"
dbus_test_runner_CONTENTS="
	usr/bin/*.exe
	usr/libexec
	usr/share
"
libdbustest1_CONTENTS="
	usr/bin/cyg*-1.dll
"
libdbustest_devel_CONTENTS="
	usr/include
	usr/lib
"
dbus_test_runner_SUMMARY="${SUMMARY} (utilities)"
libdbustest1_SUMMARY="${SUMMARY} (runtime)"
libdbustest_devel_SUMMARY="${SUMMARY} (development)"
