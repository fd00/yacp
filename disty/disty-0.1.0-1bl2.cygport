HOMEPAGE="https://github.com/c2-d2/${PN}"
SRC_URI="https://github.com/c2-d2/${PN}/archive/refs/tags/${PV}.tar.gz"

CATEGORY="Science"
SUMMARY="Compute a distance matrix from a core genome alignment file"
DESCRIPTION="${SUMMARY}"

LICENSE="MIT"
LICENSE_SPDX="SPDX-License-Identifier: MIT"
LICENSE_URI="LICENSE"

BUILD_REQUIRES="
	zlib-devel
"

src_compile()
{
	cd ${B}
	lndirs
	cygmake
}

src_test()
{
	cd ${B}
	verbose ./${PN}.exe tests/test2.fa
}

src_install()
{
	cd ${B}
	dobin ${PN}.exe
}
