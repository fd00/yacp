HOMEPAGE="https://github.com/arp242/${PN}"
SRC_URI="https://github.com/arp242/${PN}/archive/refs/tags/v${PV}.tar.gz"

CATEGORY="X11"
SUMMARY="Highlight the cursor position in X11"
DESCRIPTION="${SUMMARY}"

LICENSE="MIT"
LICENSE_SPDX="SPDX-License-Identifier: MIT"
LICENSE_URI="LICENSE"

BUILD_REQUIRES="
	libX11-devel
	libXext-devel
	libXfixes-devel
"

src_compile()
{
	cd ${B}
	lndirs
	verbose ${CC} ${CFLAGS} -o ${PN}.exe ${PN}.c -lX11 -lXext -lXfixes
}

src_install()
{
	cd ${B}
	dobin ${PN}.exe
}
