+cmake_minimum_required(VERSION 3.28)
+project(fluent-logger-c
+  VERSION 1.0.4
+  DESCRIPTION "Fluent Logger for C"
+  HOMEPAGE_URL "https://github.com/roadman/fluent-logger-c")
+
+include(GNUInstallDirs)
+
+add_library(fluent-logger-c SHARED fluentlogger.c)
+set_target_properties(fluent-logger-c PROPERTIES SOVERSION 1)
+
+install(TARGETS fluent-logger-c
+  RUNTIME DESTINATION ${CMAKE_INSTALL_BINDIR}
+  ARCHIVE DESTINATION ${CMAKE_INSTALL_LIBDIR})
+
+install(FILES fluentlogger.h DESTINATION ${CMAKE_INSTALL_INCLUDEDIR})
+
+set(prefix ${CMAKE_INSTALL_PREFIX})
+set(exec_prefix ${CMAKE_INSTALL_PREFIX})
+set(libdir ${CMAKE_INSTALL_PREFIX}/lib)
+set(includedir ${CMAKE_INSTALL_PREFIX}/include)
