  /usr/include/fmt/format.h
  /usr/include/fmt/locale.h
  /usr/include/fmt/os.h
  /usr/include/fmt/ostream.h
  /usr/include/fmt/posix.h
  /usr/include/fmt/printf.h
  /usr/include/fmt/ranges.h
