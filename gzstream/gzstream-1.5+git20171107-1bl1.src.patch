--- origsrc/gzstream/CMakeLists.txt	1970-01-01 09:00:00.000000000 +0900
+++ src/gzstream/CMakeLists.txt	2025-11-23 14:49:18.141195700 +0900
@@ -0,0 +1,36 @@
+cmake_minimum_required(VERSION 3.28)
+project(gzstream
+  VERSION 1.5
+  DESCRIPTION "Zlib C-library in a C++ iostream"
+  HOMEPAGE_URL "https://github.com/kanedo/gzstream")
+
+include(GNUInstallDirs)
+
+find_package(pkgconfig)
+pkg_check_modules(ZLIB REQUIRED zlib)
+
+add_library(gzstream SHARED gzstream.C)
+set_target_properties(gzstream PROPERTIES SOVERSION ${SOVERSION})
+target_include_directories(gzstream PUBLIC
+  $<BUILD_INTERFACE:${CMAKE_CURRENT_SOURCE_DIR}>
+  $<INSTALL_INTERFACE:${CMAKE_INSTALL_INCLUDEDIR}>
+  ${ZLIB_INCLUDE_DIRS})
+target_link_libraries(gzstream PRIVATE ${ZLIB_LIBRARIES})
+
+add_executable(test_gzip test_gzip.C)
+target_link_libraries(test_gzip PRIVATE gzstream)
+add_executable(test_gunzip test_gunzip.C)
+target_link_libraries(test_gunzip PRIVATE gzstream)
+
+install(TARGETS gzstream
+  RUNTIME DESTINATION ${CMAKE_INSTALL_BINDIR}
+  ARCHIVE DESTINATION ${CMAKE_INSTALL_LIBDIR})
+
+install(FILES gzstream.h DESTINATION ${CMAKE_INSTALL_INCLUDEDIR})
+
+set(prefix ${CMAKE_INSTALL_PREFIX})
+set(exec_prefix ${CMAKE_INSTALL_PREFIX})
+set(libdir ${CMAKE_INSTALL_PREFIX}/lib)
+set(includedir ${CMAKE_INSTALL_PREFIX}/include)
+configure_file(${CMAKE_SOURCE_DIR}/gzstream.pc.in ${CMAKE_BINARY_DIR}/gzstream.pc @ONLY)
+install(FILES ${CMAKE_BINARY_DIR}/gzstream.pc DESTINATION ${CMAKE_INSTALL_PREFIX}/lib/pkgconfig)
