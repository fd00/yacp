+
+if ! python3-config --help &> /dev/null ; then
+	AC_MSG_ERROR([Python3 is required.])
+else
+	PYTHON_CFLAGS=`python3-config --cflags`
+	PYTHON_LIBS=`python3-config --libs`
+	AC_SUBST([PYTHON_CFLAGS])
+	AC_SUBST([PYTHON_LIBS])
+fi
