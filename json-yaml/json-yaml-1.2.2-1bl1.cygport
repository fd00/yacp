HOMEPAGE="https://codeberg.org/sjmulder/${PN}"
SRC_URI="https://codeberg.org/sjmulder/${PN}/releases/download/${PV}/${P}.tar.gz"

CATEGORY="Text"
SUMMARY="Convert JSON to YAML"
DESCRIPTION="${SUMMARY}"

LICENSE="BSD-2-Clause"
LICENSE_SPDX="SPDX-License-Identifier: BSD-2-Clause"
LICENSE_URI="LICENSE.md"

BUILD_REQUIRES="
	libyajl-devel
	libyaml-devel
"

src_compile()
{
	cd ${B}
	lndirs
	cygmake
}

src_install()
{
	cd ${B}
	cyginstall PREFIX=/usr MANPREFIX=/usr/share/man
}
