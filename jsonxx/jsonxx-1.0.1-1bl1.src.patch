@@ -0,0 +1,29 @@
+cmake_minimum_required(VERSION 3.28)
+project(jsonxx
+  VERSION 1.0.1
+  DESCRIPTION "JSON parser in C++"
+  HOMEPAGE_URL "https://github.com/hjiang/jsonxx")
+
+include(GNUInstallDirs)
+include(CTest)
+
+add_library(jsonxx SHARED jsonxx.cc)
+set_target_properties(jsonxx PROPERTIES SOVERSION ${PROJECT_VERSION_MAJOR})
+
+install(TARGETS jsonxx
+  RUNTIME DESTINATION ${CMAKE_INSTALL_BINDIR}
+  ARCHIVE DESTINATION ${CMAKE_INSTALL_LIBDIR})
+
+enable_testing()
+add_executable(jsonxx_test jsonxx_test.cc) 
+target_link_libraries(jsonxx_test jsonxx)
+add_test(NAME jsonxx_test COMMAND jsonxx_test)
+
+install(FILES jsonxx.h DESTINATION ${CMAKE_INSTALL_INCLUDEDIR})
+
+set(prefix ${CMAKE_INSTALL_PREFIX})
+set(exec_prefix ${CMAKE_INSTALL_PREFIX})
+set(libdir ${CMAKE_INSTALL_PREFIX}/lib)
+set(includedir ${CMAKE_INSTALL_PREFIX}/include)
+configure_file(${CMAKE_SOURCE_DIR}/jsonxx.pc.in ${CMAKE_BINARY_DIR}/jsonxx.pc @ONLY)
+install(FILES ${CMAKE_BINARY_DIR}/jsonxx.pc DESTINATION ${CMAKE_INSTALL_PREFIX}/lib/pkgconfig)
