  /usr/share/doc/ksi-tool/README.md
  /usr/share/man/man1/ksi-extend.1.gz
  /usr/share/man/man1/ksi-pubfile.1.gz
  /usr/share/man/man1/ksi-sign.1.gz
  /usr/share/man/man1/ksi-verify.1.gz
  /usr/share/man/man1/ksi.1.gz
  /usr/share/man/man5/ksi-conf.5.gz

