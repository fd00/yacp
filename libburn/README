  /usr/share/doc/libburn/mediainfo.txt
  /usr/share/man/man1/cdrskin.1.gz

(libburn4)
  /usr/bin/cygburn-4.dll

(libburn-devel)
  /usr/include/libburn/libburn.h
  /usr/lib/libburn.dll.a
  /usr/lib/pkgconfig/libburn-1.pc

