HOMEPAGE="https://github.com/libyal/${PN}"
SRC_URI="https://github.com/libyal/${PN}/archive/refs/tags/${PV}.tar.gz"

CATEGORY="Libs"
SUMMARY="Library and tools to access FileVault Drive Encryption (FVDE) encrypted volumes"
DESCRIPTION="libfvde is a library to access FileVault Drive Encryption (FVDE) (or
FileVault2) encrypted volumes."

LICENSE="LGPL-3.0-or-later"
LICENSE_SPDX="SPDX-License-Identifier: LGPL-3.0-or-later"
LICENSE_URI="COPYING.LESSER"

CYGPORT_USE_UNSTABLE_API=1
src_patch_hook()
{
	cd ${origsrcdir}/${SRC_DIR}
	chmod u+x tests/*.{py,sh}
}

BUILD_REQUIRES="libbfio-devel libcaes-devel libcdata-devel libcerror-devel libclocale-devel libcnotify-devel libcthreads-devel libfcache-devel libfdata-devel libfguid-devel libfplist-devel libhmac-devel libuna-devel python39-devel zlib-devel"

CYGCONF_ARGS="
	--enable-python
	--enable-wide-character-type
"

src_test()
{
	cd ${B}
	pushd tests
		for f in ${S}/tests/*.{py,sh}
		do
			ln -fs ${f} .
		done
	popd
	cygtest
	rm tests/*.{py,sh}
}

DOCS="
	COPYING.LESSER
	documentation/*
"

PKG_NAMES="
	${PN}
	${PN}1
	${PN}-devel
	python39-${PN}
"
libfvde_CONTENTS="
	usr/bin/*.exe
	usr/share/doc
	usr/share/man/man1
"
libfvde1_CONTENTS="
	usr/bin/cyg*-1.dll
"
libfvde_devel_CONTENTS="
	usr/include
	usr/lib/lib*.dll.a
	usr/lib/pkgconfig
	usr/share/man/man3
"
python39_libfvde_CONTENTS="
	usr/lib/python3.9
"
libfvde_SUMMARY="${SUMMARY} (utilities)"
libfvde1_SUMMARY="${SUMMARY} (runtime)"
libfvde_devel_SUMMARY="${SUMMARY} (development)"
python39_libfvde_SUMMARY="${SUMMARY} (python39 bindings)"
