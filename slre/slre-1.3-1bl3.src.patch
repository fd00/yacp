--- origsrc/slre-1.3/CMakeLists.txt	1970-01-01 09:00:00.000000000 +0900
+++ src/slre-1.3/CMakeLists.txt	2025-11-24 11:58:30.678462100 +0900
@@ -0,0 +1,27 @@
+cmake_minimum_required(VERSION 3.28)
+project(slre
+  VERSION 1.3
+  DESCRIPTION "Super Light Regexp engine for C/C++"
+  HOMEPAGE_URL "https://github.com/cesanta/slre")
+
+include(GNUInstallDirs)
+include(CTest)
+
+add_library(slre SHARED slre.c)
+set_target_properties(slre PROPERTIES SOVERSION ${PROJECT_VERSION_MAJOR})
+
+install(TARGETS slre
+  RUNTIME DESTINATION ${CMAKE_INSTALL_BINDIR}
+  ARCHIVE DESTINATION ${CMAKE_INSTALL_LIBDIR})
+
+add_executable(unit_test unit_test.c)
+target_link_libraries(unit_test PRIVATE slre)
+add_test(NAME unit_test COMMAND unit_test)
+
+install(FILES slre.h DESTINATION ${CMAKE_INSTALL_INCLUDEDIR})
+set(prefix ${CMAKE_INSTALL_PREFIX})
+set(exec_prefix ${CMAKE_INSTALL_PREFIX})
+set(libdir ${CMAKE_INSTALL_PREFIX}/lib)
+set(includedir ${CMAKE_INSTALL_PREFIX}/include)
+configure_file(${CMAKE_SOURCE_DIR}/slre.pc.in ${CMAKE_BINARY_DIR}/slre.pc @ONLY)
+install(FILES ${CMAKE_BINARY_DIR}/slre.pc DESTINATION ${CMAKE_INSTALL_PREFIX}/lib/pkgconfig)
