HOMEPAGE="https://github.com/rbsec/${PN}"
SRC_URI="https://github.com/rbsec/${PN}/archive/${PV}-rbsec.tar.gz"
SRC_DIR="${P}-rbsec"

CATEGORY="Security"
SUMMARY="Fast SSL/TLS scanner"
DESCRIPTION="sslscan tests SSL/TLS enabled services to discover supported
cipher suites."

src_compile()
{
    cd ${B}
    lndirs
    cygmake
}

src_test()
{
    cd ${B}
    ./${PN}.exe google.com
}

src_install()
{
    cd ${B}
    dobin ${PN}.exe
    doman ${PN}.1
}
