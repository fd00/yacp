HOMEPAGE="https://github.com/sparkoo/NTetris"
SRC_URI="https://github.com/sparkoo/NTetris/archive/refs/tags/${PV}.tar.gz"
SRC_DIR="NTetris-${PV}"

CATEGORY="Games"
SUMMARY="Tetris for CLI"
DESCRIPTION="Simple Tetris game written in C++ with ncurses lib."

LICENSE="MIT"
LICENSE_SPDX="SPDX-License-Identifier: MIT"
LICENSE_URI="LICENSE"

BUILD_REQUIRES="
	libncurses-devel
"

src_compile()
{
	cd ${B}
	lndirs
	cygmake PREFIX=/usr VERSION=${PV}
}

src_install()
{
	cd ${B}
	dobin build/ntetris
}
