HOMEPAGE="https://github.com/lindenb/${PN}"
SRC_URI="https://github.com/lindenb/${PN}/archive/refs/tags/v${PV}.tar.gz"

CATEGORY="Text"
SUMMARY="Simple tool to verticalize text delimited files"
DESCRIPTION="${SUMMARY}"

LICENSE="MIT"
LICENSE_SPDX="SPDX-License-Identifier: MIT"
LICENSE_URI="LICENSE"

src_compile()
{
	cd ${B}
	lndirs
	verbose ${CC} ${CPPFLAGS} ${CFLAGS} ${LDFLAGS} -o ${PN}.exe ${PN}.c
}

src_install()
{
	cd ${B}
	dobin ${PN}.exe
	doman ${PN}.1
}
