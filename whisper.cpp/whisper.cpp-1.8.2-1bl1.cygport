HOMEPAGE="https://github.com/ggml-org/${PN}"
SRC_URI="https://github.com/ggml-org/${PN}/archive/refs/tags/v${PV}.tar.gz"

CATEGORY="Libs"
SUMMARY="Port of OpenAI's Whisper model in C/C++"
DESCRIPTION="${SUMMARY}"

LICENSE="MIT"
LICENSE_SPDX="SPDX-License-Identifier: MIT"
LICENSE_URI="LICENSE"

BUILD_REQUIRES="
	libavcodec-devel
	libavformat-devel
	libavutil-devel
	libggml-devel
	libSDL2-devel
	libswresample-devel
"

export CPPFLAGS="${CPPFLAGS} -D_GNU_SOURCE"

inherit cmake

CYGCMAKE_ARGS="
	-DBUILD_SHARED_LIBS:BOOL=ON
	-DWHISPER_CURL:BOOL=ON
	-DWHISPER_FFMPEG:BOOL=ON
	-DWHISPER_SDL2:BOOL=ON
	-DWHISPER_USE_SYSTEM_GGML:BOOL=ON
"

PKG_NAMES="
	whisper.cpp
	libwhisper1
	libwhisper-devel
"
whisper_cpp_CONTENTS="
	usr/bin/*.exe
	usr/share
"
libwhisper1_CONTENTS="
	usr/bin/cyg*-1.dll
"
libwhisper_devel_CONTENTS="
	usr/include
	usr/lib
"
whisper_cpp_SUMMARY="${SUMMARY} (utilities)"
libwhisper1_SUMMARY="${SUMMARY} (runtime)"
libwhisper_devel_SUMMARY="${SUMMARY} (development)"
